<PaperSidenavToggle @name="left" as |toggleAction|>
  <PaperButton @classNames="hide-gt-sm show-menu-icon" @iconButton={{true}} @onClick={{action toggleAction}}>
    {{paper-icon "menu"}}
  </PaperButton>
</PaperSidenavToggle>

<div class="header">
  <h2>Works</h2>

{{#each orderBy as |item|}}
  <PaperButton class="order-by" @iconButton={{true}}  @onClick={{action orderByAsc}}>
    {{paper-icon item.icon side=18}}
  </PaperButton>
{{/each}}

</div>
<PaperDivider class="divider-dark" />

<Posts @posts={{@posts}} />

<AddNewPost />
