<PaperItem @class="md-2-line">
  <img src={{if (is-empty @comment.user.avatar) 'https://place-hold.it/300x500?text=RN&fontsize=128' @comment.user.avatar}} alt="Image placeholder" class="md-avatar">
  <div class="md-list-item-text">
    <div class="post-description"><span class="author">{{@comment.user.firstName}} {{@comment.user.lastName}}</span></div>
    <div class="post-description">on <span class="date">{{format-date @comment.createdAt}}</span>
    </div>
  </div>
  {{#if (eq this.session.data.authenticated.email @comment.user.email)}}
    <PaperButton
    class="delete-icon"
    @iconButton={{true}}
    {{on "click" (fn @deleteCommentById @comment.id)}}>
    {{paper-icon "delete-outline"}}
    {{log this.session}}
    </PaperButton>
  {{/if}}
</PaperItem>
<div class="post-content">
  {{@comment.content}}
</div>
